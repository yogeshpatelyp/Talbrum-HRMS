        <activity
            android:name="com.talentcerebrumhrms.activity.LeaveDetailsActivity"
            android:label="Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name="com.talentcerebrumhrms.activity.UploadTimesheetActivity"
            android:label="Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name="com.talentcerebrumhrms.activity.VacancyActivity"
            android:label="Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
